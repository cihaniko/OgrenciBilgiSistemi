<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/myLayout"
    android:stretchColumns="0"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">


    <Button
        android:text="Düzenle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_Duzenle"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/btn_Sil"
        android:layout_alignStart="@+id/btn_Liste" />

    <Button
        android:text="Liste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_Liste"
        android:layout_alignBaseline="@+id/btn_Duzenle"
        android:layout_alignBottom="@+id/btn_Duzenle"
        android:layout_toEndOf="@+id/baslik" />

    <Button
        android:text="Ekle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_Ekle"
        android:layout_above="@+id/btn_goruntule"
        android:layout_alignStart="@+id/btn_goruntule"
        android:layout_marginBottom="16dp" />

    <Button
        android:text="Sil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_Sil"
        android:layout_alignBaseline="@+id/btn_Ekle"
        android:layout_alignBottom="@+id/btn_Ekle"
        android:layout_alignStart="@+id/btn_Duzenle" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/ed_No"
        android:hint="Ögrenci No"
        android:textSize="12sp"
        android:layout_above="@+id/ed_Name"
        android:layout_alignEnd="@+id/btn_Sil"
        android:layout_marginEnd="37dp" />

    <TextView
        android:text="Ögrenci No:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_No"
        android:layout_marginEnd="52dp"
        android:layout_alignBaseline="@+id/ed_No"
        android:layout_alignBottom="@+id/ed_No"
        android:layout_toStartOf="@+id/ed_No" />

    <TextView
        android:text="Öğrenci Adı:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t_Ad"
        android:layout_alignBaseline="@+id/ed_Name"
        android:layout_alignBottom="@+id/ed_Name"
        android:layout_alignStart="@+id/text_No" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/ed_VizeNot"
        android:inputType="number"
        android:hint="Vize Notu"
        android:textSize="12sp"
        android:layout_above="@+id/btn_Sil"
        android:layout_alignStart="@+id/ed_Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/ed_Name"
        android:hint="Öğrenci Adı"
        android:textSize="12sp"
        android:layout_above="@+id/ed_VizeNot"
        android:layout_alignStart="@+id/ed_No" />

    <Button
        android:text="Görüntüle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_goruntule"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/t_Ad" />

    <TextView
        android:text="Vize Notu:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t_Vize"
        android:layout_alignBaseline="@+id/ed_VizeNot"
        android:layout_alignBottom="@+id/ed_VizeNot"
        android:layout_alignEnd="@+id/text_No" />

    <TextView
        android:text="Öğrenci Bilgi Sistemi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/baslik"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:layout_above="@+id/ed_No"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ogrenci"
        android:id="@+id/imageView2"
        android:layout_above="@+id/baslik"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="29dp" />

</RelativeLayout>